{
	"name": "Lokalise document preview (unofficial)",
	"version": "2.0.0",
	"description": "Brings visual preview to HTML documents at Lokalise",
	"homepage_url": "https://github.com/terales/lokalise-html-document-preview",
	"manifest_version": 2,
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"matches": [
				"https://app.lokalise.com/download/download-preview"
			],
			"js": [
				"preview_content_script.js"
			]
		},
		{
			"matches": [
				"https://app.lokalise.com/project/*view=document*"
			],
			"js": [
				"browser-polyfill.min.js",
				"document_editor_context_script.js",
				"document_live_preview_context_script.js"
			]
		}
	],
	"web_accessible_resources": [
		"edit_attributes_with_form.js",
		"codemirror_sync_current_value_with_data_attribute.js"
	],
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "lokalise-html-document-preview@terales.github.io",
			"strict_min_version": "67.0"
		}
	},
	"icons": {
		"128": "icon.png"
	}
}
